<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.example.shishir.blood.Fragment.AccountInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/phoneNumberEtAtAccountInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name/Phone Number"
                android:inputType="text"
                android:maxLength="11"
                android:singleLine="true"
                android:textSize="@dimen/normalTextSize" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/passwordEtAtAccountInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="@dimen/normalTextSize" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/passwordRecoverNumberEtAtAccountInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password Recovery Number"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="@dimen/normalTextSize" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">
        <Button
            android:id="@+id/doneBtnAtAccountInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_of_button"
            android:text="Done"
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>
