<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.example.shishir.blood.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/largeMargin"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/contactHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/smallMargin"
            android:text="Contact Number:"
            android:textColor="@color/redColor"
            android:textSize="@dimen/extraSmallSizeText" />


        <EditText
            android:id="@+id/phoneNumberEtAtLoginPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding"
            android:maxLength="11"
            android:background="@drawable/background_of_edittext"
            android:hint="e.g: 01784******"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="@dimen/largeMargin"
            android:textSize="@dimen/normalTextSize" />

        <TextView
            android:id="@+id/birthHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/smallMargin"
            android:text="Date of Birth:"
            android:textColor="@color/redColor"
            android:textSize="@dimen/extraSmallSizeText" />

        <TextView
            android:id="@+id/birthDateAtLoginPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding"
            android:background="@drawable/background_of_edittext"
            android:hint="e.g: 31/12/1994"
            android:padding="@dimen/largeMargin"
            android:textSize="@dimen/normalTextSize" />

        <CheckBox
            android:id="@+id/loggedInCheckBoxAtLoginPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay logged in"
            android:textSize="@dimen/smallTextSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/loginButtonAtLoginPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/largeMargin"
            android:background="@drawable/background_of_button"
            android:text="Login"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you are not registered.Then  "
                android:textSize="@dimen/extraSmallSizeText" />

            <TextView
                android:id="@+id/registerHereButtonAtLoginPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registerHere"
                android:textAppearance="@android:style/TextAppearance"
                android:textColor="@color/redColor"
                android:textSize="@dimen/smallTextSize" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
