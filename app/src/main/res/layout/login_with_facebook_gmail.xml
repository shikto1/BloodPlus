<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.example.shishir.blood.CreateAccountUsingGmail">

    <Button
        android:id="@+id/loginWithFacebookBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallBtnHeight"
        android:background="@drawable/back_of_facebook_button"
        android:text="Continue with Facebook"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/white"
        android:textSize="@dimen/extraSmallSizeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        android:text="or"
        android:textSize="@dimen/smallTextSize" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_of_edittext"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/largeMargin"
        android:textSize="@dimen/smallTextSize" />

    <EditText
        android:id="@+id/passwordETForLoginWithGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/largeMargin"
        android:layout_marginTop="@dimen/padding"
        android:background="@drawable/background_of_edittext"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="@dimen/largeMargin"
        android:textSize="@dimen/smallTextSize" />

    <Button
        android:id="@+id/loginWithEmailBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallBtnHeight"
        android:layout_marginTop="@dimen/padding"
        android:background="@drawable/background_of_button"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="@dimen/smallTextSize" />

    <Button
        android:id="@+id/forgotPasswordBtnAtFG"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/largeMargin"
        android:layout_marginTop="@dimen/padding"
        android:text="Forgot Password ?"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/redColor"
        android:textSize="@dimen/smallTextSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/largeMargin"
        android:layout_marginTop="@dimen/padding"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:text="Not Registered ?" />
        <Button
            android:id="@+id/registerHereBtnAtFacebookGmail"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="@color/redColor"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:text="Register here" />

    </LinearLayout>



</LinearLayout>
