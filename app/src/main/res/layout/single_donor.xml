<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/largeMargin"
    android:orientation="vertical">
    <TextView
        android:id="@+id/nameTvAtsingleDonor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="SHishir"
        android:textSize="@dimen/largeTextSize"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTvAtsingleDonor"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bloodGroupAtSingleDonor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Donated: "
            android:textSize="@dimen/extraSmallSizeText"
            />
        <TextView
            android:id="@+id/lastDonatedatListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 months ago"
            android:textSize="@dimen/extraSmallSizeText"
            />
    </LinearLayout>
    <ImageButton
        android:id="@+id/callImageBtn"
        android:src="@drawable/dialler_icon"
        android:layout_width="50dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAppearance="@android:style/TextAppearance"/>

</RelativeLayout>